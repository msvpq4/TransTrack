@model IEnumerable<transtrack.Models.Statement>
@{
    ViewBag.Title = "Portal";
}

<table class="rec_act_table">
    <tr>
        <th colspan="3" bgcolor="#00B5E2">Recent Activity</th>
    </tr>
    <tr>
        <th>Employee</th>
        <th>Charge</th>
        <th>Date </th>
    </tr>
    
    @foreach (var item in Model.Take(4))
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Amount.ToString("C")</td>
            <td>@item.Date.ToShortDateString()</td>
        </tr>
    }
    
</table>

<table class="exp_percent portal_component">
    <tr>
        <th bgcolor="#00B5E2">Expenditure Percentage</th>
    </tr>
    <tr>
        <td>
            <canvas id="barChart" width="480"></canvas>
        </td>
    </tr>
</table>


<input value = "portal" id="page" type="hidden"/>


<table class="top_spenders portal_component">
    <tr>
        <th bgcolor="#00B5E2">Top Spenders</th>
    </tr>
    <tr>
        <td id="donut_chart_container" >
            <canvas id="donutChart"></canvas>
        </td>
    </tr>
</table>

