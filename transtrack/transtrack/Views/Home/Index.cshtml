@{
    ViewBag.Title = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TransTrac</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins" rel="stylesheet">
    @Styles.Render("~/Content/css")
    
</head>

<body>

    <div class="container body-content">
        <div id="jumbotron">
            <img src="~/Content/Images/transtrac_logo_green.png" alt="TransTrac logo" id="logo"/>
        
        
            <form id="login_form">
            
                <input type="text" class="input_box" placeholder="Enter Employee ID" name="empID" required><br>
                <input type="password" class="input_box" placeholder="Enter Password" name="empPW" required><br>
            
            
                <input type='button' value='Login' id = 'log_button' onclick='window.location = "@Url.Action("Portal", "Home")";' />
        
            
            </form>
    
        </div>
    
        <footer id="footer">
            <p> @DateTime.Now.2018 - Copyright &copy; 2018 TransTrack, Inc. <br>All rights reserved.</p>
        </footer>
    </div>
</body>
</html>


